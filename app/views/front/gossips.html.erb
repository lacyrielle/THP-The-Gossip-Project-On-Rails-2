<div class="row">
  <% @gossips.each do |gossip| %>
    <div class="col-4 mb-3">
      <div class="card">
        <img class="card-img-top" alt="Card image cap" src="https://actu.meilleurmobile.com/wp-content/uploads/2015/06/gossip-application.jpg">
        <div class="card-body">
          <h5 class="card-title"><%=gossip.title %></h5>
          <p class="card-text"><%= truncate gossip.content, length: 30 %></p>
          <p class="card-text">
            <small class="text-muted">
              post√© par <a href="<%= user_path(gossip.user.id) %>"><%=gossip.user.first_name %></a>
              le <%=gossip.created_at.strftime("%d/%m/%Y %H:%I") %>
            </small>
          </p>
          <a type="button" class="btn btn-primary btn-block" href="<%=gossip_path(gossip.id) %>">Voir le potin</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
